		if(number == 7){
			document.write("<p> Hey, 7 is my lucky number too! </p>");			
		}
		else if(number == 13 || number ==24){
			document.write("<p>Wooh. " + number + "? That's the most luckiest number!</p>");
		}
		else{
			document.write("<p> The number " + number + " is lucky for you!</p>");
		}
	  </script> 
